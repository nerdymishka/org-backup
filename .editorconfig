root = true

[*.{js,py,md,json,yml,yaml}]
charset = utf-8
indent_style = space

[*.{js,json,code-workspace}]
indent_size = 4 

[*.{yml,yaml}]
indent_size = 2

[*.{md}]
indent_size = 2
indent_style = space
insert_final_newline = true

[*.{ps,ps1,psm1,psd}]
indent_size = 4
indent_style = space
trim_trailing_whitespace = true

[*.cs]
indent_size = 4
indent_style = space
trim_trailing_whitespace = true
dotnet_style_qualification_for_field = true
dotnet_style_qualification_for_property = true
dotnet_style_qualification_for_method = true 
dotnet_style_qualification_for_event = true 
dotnet_sort_system_directives_first = true
dotnet_naming_rule.private_static_fields_must_be_camel_cased_and_prefixed_with_s_underscore.symbols   = private_static_field_symbols
dotnet_naming_rule.private_static_fields_must_be_camel_cased_and_prefixed_with_s_underscore.style     = camel_case_and_prefix_with_s_underscore_style
dotnet_naming_rule.private_static_fields_must_be_camel_cased_and_prefixed_with_s_underscore.severity  = warning

dotnet_diagnostic.SA1308.severity = none 
dotnet_diagnostic.SA1200.severity = none
dotnet_diagnostic.SA1633.severity = none
dotnet_diagnostic.SA1614.severity = none 
dotnet_diagnostic.SA1600.severity = none 
dotnet_diagnostic.RCS1138.severity = none
dotnet_diagnostic.SA1402.severity = none
dotnet_diagnostic.CS1591.severity = none
dotnet_diagnostic.SA1503.severity = none 
dotnet_diagnostic.S1135.severity = none
dotnet_diagnostic.SA1601.severity = suggestion
dotnet_diagnostic.SA1108.serverity = suggestion

[*.{xml,build.props,build.targets,csproj}]
indent_size = 2